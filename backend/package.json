{
	"name": "backend",
	"version": "1.0.0",
	"description": "Knowledge backend using Fastify",
	"main": "index.ts",
	"type": "module",
	"scripts": {
		"build": "npm run build:shared && tsc",
		"build:shared": "test -d ../shared && cd ../shared && npm install && npm run build || echo 'Shared types not found, skipping'",
		"start": "tsc && node ./bin/index.js",
		"preinstall": "if [ -d ../shared ]; then cd ../shared && npm install && npm run build; fi",
		"dev": "nodemon --exec tsx ./index.ts",
		"test": "test"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@fastify/cors": "^11.2.0",
		"@fastify/postgres": "^6.0.2",
		"@know-ledge/shared": "*",
		"@supabase/supabase-js": "^2.89.0",
		"dotenv": "^17.2.3",
		"fastify": "^5.6.2",
		"fastify-plugin": "^5.1.0",
		"pg": "^8.16.3",
		"postgres": "^3.4.8"
	},
	"devDependencies": {
		"@types/node": "^25.0.0",
		"nodemon": "^3.1.11",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
}
